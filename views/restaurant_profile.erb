<div class="jumbotron">
  <h1 class="display-4"><%= @restaurant.name %></h1>
  <hr class="my-4">
  <p class="lead"><%= @restaurant.description %></p>
</div>
<div class="container commentCenter">
	<h1>Comments</h1>
	<!-- Button trigger modal -->
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
	  Comment!
	</button>
</div>

<div class="container commentLength">
	<div class="row justify-content-center">
		<% @restaurant.posts.each do |post| %>
			<div class="col-2 comments">
				<h5><%= post.user.first_name %></h5>
				<h6><%= post.subject %></h6>
				<h6><%= post.content %></h6>
			</div>
		<% end %>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title commentCenter" id="exampleModalLabel">Comment</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/new_post" class="formbackground">
      		<div class="form-group">
        		<label for="commentSubject">Subject</label>
        		<input type="text" name="post[subject]" class="form-control" id="subject" placeholder="Subject">
      		</div>
      		<div class="form-group">
        		<label for="comment">Comment</label>
        		<textarea maxlength="150" name="post[content]" id="" cols="30" rows="10" placeholder="Comment"></textarea>
      		</div>
      		<input type="hidden" name="post[restaurant_id]" value="<%= @restaurant.id %>">
        	<button type="submit" class="btn btn-primary">Submit</button>
        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </form>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>